  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.11.0",
    "classnames": "^2.5.1",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^4.1.11",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "build:tailwind": "npx @tailwindcss/cli -i ./src/index.css -o ./src/tailwind.output.css",
    "watch:tailwind": "npx @tailwindcss/cli -i ./src/index.css -o ./src/tailwind.output.css --watch",
    "start": "concurrently \"npm run watch:tailwind\" \"react-scripts start\"",
    "build": "npm run build:tailwind && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "concurrently": "^9.2.0"
  }
